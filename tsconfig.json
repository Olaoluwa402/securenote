{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/mvc/config/db.js",
    "src/pages/api/login/index.js",
    "src/components/Login/Login.js",
    "src/components/Login/Form.js",
    "src/pages/index.js",
    "src/components/Register/Form.js",
    "src/components/Register/Register.js",
    "src/redux/Features/auth/authLoginSlice.js"
  ],
  "exclude": ["node_modules"]
}
